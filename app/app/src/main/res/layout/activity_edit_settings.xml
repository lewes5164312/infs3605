<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".EditSettingsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="100dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="97dp"
        android:layout_height="111dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_flattr"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personalinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Edit Information"
        android:padding="16dp"
        android:textColorHint="@color/colorLogin"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/icon" />

    <Spinner
        android:id="@+id/industry_spinner_settings"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:background="#4DFFFFFF"
        android:backgroundTint="#FFFFFF"
        android:hint="Industry"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/guideline_middle"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/personalinfo"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/businessNameEdit"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:background="#4DFFFFFF"
        android:hint="Business Name"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/colorLogin"
        app:layout_constraintEnd_toStartOf="@id/guideline_middle"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/industry_spinner_settings" />

    <EditText
        android:id="@+id/phoneNumberEdit"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:background="#4DFFFFFF"
        android:hint="Phone Number"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/colorLogin"
        app:layout_constraintEnd_toStartOf="@id/guideline_middle"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/businessNameEdit" />


    <Button
        android:id="@+id/industryEditButton"
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:text="Edit"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@id/personalinfo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/businessEditButton"
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="Edit"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@id/industryEditButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/phoneEditButton"
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:text="Edit"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@id/businessEditButton"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>