<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewLanguage"
        android:layout_width="246dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="90dp"
        android:layout_marginTop="96dp"
        android:orientation="vertical"
        android:text="Please select your Language"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonChinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="chineseClick"
        android:text="中文"
        app:layout_constraintTop_toBottomOf="@id/buttonEnglish"
        tools:layout_editor_absoluteX="208dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="76dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/china"
        app:layout_constraintStart_toEndOf="@+id/buttonChinese"
        app:layout_constraintTop_toBottomOf="@id/buttonEnglish"
        tools:layout_editor_absoluteY="201dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@+id/buttonEnglish"
        app:layout_constraintTop_toBottomOf="@id/textViewLanguage"
        app:srcCompat="@drawable/usa"
        tools:layout_editor_absoluteY="137dp" />

    <Button
        android:id="@+id/buttonEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="englishClick"
        android:orientation="vertical"
        android:text="English"
        app:layout_constraintTop_toBottomOf="@id/textViewLanguage"
        tools:layout_editor_absoluteX="208dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@+id/buttonEspanol"
        app:layout_constraintTop_toBottomOf="@id/buttonChinese"
        app:srcCompat="@drawable/spain"
        tools:layout_editor_absoluteY="257dp" />

    <Button
        android:id="@+id/buttonEspanol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="espanolClick"
        android:text="Español"
        app:layout_constraintTop_toBottomOf="@id/buttonChinese"
        tools:layout_editor_absoluteX="208dp" />

</androidx.constraintlayout.widget.ConstraintLayout>