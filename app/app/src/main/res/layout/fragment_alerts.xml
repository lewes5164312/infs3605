<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.infs3605.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendOnChannel1"
        android:text="Get Latest Alert" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getLatestUpdate"
        android:text="Get NSW cases - Latest" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="get7DaysAgoUpdate"
        android:text="Get NSW cases - 7 Days Ago" />

    <Switch
        android:id="@+id/alertswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receive Alerts"
        android:textColor="#FFFFFF" />
</LinearLayout>